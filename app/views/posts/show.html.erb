<h1><%= @post.category %></h1>

<h2><%= @post.title %></h2>
<h4><%= @post.author %></h4>
<p><%= @post.body %></p>
<h4>Posted In: <%= @post.category %></h4>
<p>Created: <%= @post.created_at %></p>
<p>Updated: <%= @post.updated_at %></p>
<%= link_to 'Back', posts_path %>
<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
