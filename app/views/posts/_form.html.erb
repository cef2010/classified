<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :body %>
  <%= f.text_area :body %>
  <%= f.label :category %>
  <%= f.select :category, options_for_select([['m4m', 'm4m'],['m4f', 'm4f'],['f4m', 'f4m'],['f4f', 'f4f'], ['Free', 'Free'], ['Sale', 'Sale']])%>
<%= f.submit %>
<% end %>
